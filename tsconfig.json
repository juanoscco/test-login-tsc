{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src", // La ra√≠z de tu proyecto es "./src"
    "paths": {
      "@/*": ["*"] // Define el alias '@' para apuntar a "./src"
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}